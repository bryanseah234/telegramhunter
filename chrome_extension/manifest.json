{
  "manifest_version": 3,
  "name": "Fofa Scraper",
  "version": "1.0",
  "description": "Automated Fofa Scraper with Country Rotation",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://fofa.info/*",
    "https://en.fofa.info/*",
    "https://api.telegram.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://fofa.info/*",
        "https://en.fofa.info/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}